package util { 		import flash.display.*;		import flash.net.*; 	/**	*  A class the can be used as "background" for a interaction 	*  It simple takes some XML and loads that into a movie clip  	* @author Robin Petterd	*/	public class Background extends MovieClip 	{		private var _myLoader;		public var layout:Layout = new Layout();				public function Background(loader)						{		 _myLoader = loader; 		 		}		/**		 * 		 * @param	x is bit of XML like  <space>		 *	<background src="media/rooms/library.swf" x="100" y="100"> </background>			 * </space>		 * @param	target		 */		public function load(x:XMLList,target:MovieClip):void {						trace("+++++++++++++++++ the background XML is " + x.background.@src); 						var back = new Loader(); 			back.load(new URLRequest( x.background.@src)); 						///add that to the load 						_myLoader.add(back); //TODO - 10 - loader get working with loader  			layout.SetPos(back,x.background)			target.addChildAt(back,0);								}	}	}