package helper {	import flash.display.*;	import flash.events.*;		/**	* ...	* @author Robin Petterd	*/	public class  HelperModel extends MovieClip {				public var myData:XMLList; 		private var _currentHelp:XML; 				public function HelperModel() {		}				public function setData(d:XMLList)		{					myData = d; 			}			public function update(e:Event) 		{						var currrentHelpID =  e.target.myHelp.CurrentHelp; 			//trace("HERE ----------- the current help id is " + e.target.myHelp.CurrentHelp); //returns the current help			//trace(currrentHelpID);			//_currentHelp = myData.help.(@id == currrentHelpID.valueOf()); //search thru the XML to find right id 						_currentHelp = null; 						if (currrentHelpID != null) { 			 					//trace("YES  there should be an  id for the currentHelp"); 								_currentHelp = myData.help[currrentHelpID].valueOf();				//trace(_currentHelp.toXMLString()); 			}						return _currentHelp; 		}				public function get currentHelp():XML { return _currentHelp; }				public function set currentHelp(value:XML):void 		{			_currentHelp = value;		}	}	}