package stem {	import flash.display.MovieClip;	import flash.events.*;	import flash.utils.*;		import stem.model.*;	import stem.views.*;		public class Main extends MovieClip {		// Constructor			public function Main() {						if ( stage ) init ();			else addEventListener(Event.ADDED_TO_STAGE, init);		}						private function init ( e:Event = null ):void		{						var parameters:Object = this.loaderInfo.parameters;			var myDataFile:String = null;			var defaultStatement:String = "";			try {							myDataFile = parameters["file"];			} catch(errObject:Error) {							}			//use Id;			parameters["currentStatement"] = "4";						try { 				//currentStatement parameter;				defaultStatement = parameters["currentStatement"];			} catch (e:Error) {							}			//checked to see if we actuall have some data.  			if(myDataFile == null) {				myDataFile = "data/stem.xml";			}			new View(new Model(myDataFile, defaultStatement), this.stage, this);					}	} 	} 