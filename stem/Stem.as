package stem {	import fl.controls.List;		import flash.display.MovieClip;	import flash.events.*;	import flash.utils.*;		import stem.model.*;	import stem.views.*;
	
	public class Stem extends MovieClip {		// Constructor		public function Stem( dataFileSource:String = "", statement:String = "") {			this.dataFileSource = dataFileSource;			this.statement = statement;			if ( stage ) init ();			else addEventListener(Event.ADDED_TO_STAGE, init);		}				private var view:View;		private var model:Model;		private function init ( e:Event = null ):void		{						//initialize		}		private var _dataFileSource:String;		public function set dataFileSource (s:String):void{ 			_dataFileSource = s;			}				public function get dataFileSource ():String {			return _dataFileSource;		}				private var _statement:String;		public function set statement ( s:String ):void		{							_statement = s;			if ( model ) { 				//app has started and set the new statement directly;				model.interactState.nextStatement = _statement;			}		}		public function get statement ():String {			return _statement;		}		/**		 * 		 * Starts the stem player. 		 * 		 */				public function start ():void		{			if (dataFileSource == "") {				throw (new Error ("dataFileSource property must be set before starting Stem.") );			}			model = new Model (dataFileSource, statement);			view = new View(model, this.stage, this);		}	}}