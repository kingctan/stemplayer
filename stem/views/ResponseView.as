package stem.views {		//import fl.accessibility.ListAccImpl;	import fl.controls.List;	import fl.data.DataProvider;		import flash.display.*;	import flash.events.*;		import util.*;			public class ResponseView extends List {				private var myList:List;		private var model; 		private var layout:Layout = new Layout(); 				public function ResponseView(m) {			model = m; 			myList = this			//trace("just made a reponse list");						//ListAccImpl.enableAccessibility();		}				public function init() {			activeChoiceList(model.buildChoices()); 			myList.addEventListener(Event.CHANGE, model.updateChoice);						myList.setStyle("cellRenderer", MultiLineCell);						////trace("The height is"  + model.Responses.@choiceheight);			myList.rowHeight =  model.Responses.@choiceheight;						layout.SetPos(this,	model.Responses);			layout.SetScale(this, model.Responses);		}		public function die() {						myList.removeEventListener(Event.CHANGE, model.updateChoice);		}		public function activeChoiceList(CurrentChoices:Array){						myList.dataProvider = new DataProvider(CurrentChoices);					} 	}}